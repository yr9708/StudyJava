<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- c : constructor-arg -->
	<bean id ="lee" class="com.test05.Emp" c:name="이순신" c:salary="2000000"></bean>
	<bean id="leess" class="com.test05.Engineer" c:emp-ref="lee" c:dept="기술팀"></bean>
	
	
	<!-- p : property -->
	<bean id="hong" class="com.test05.Emp" p:name="홍길동" p:salary="2100000"></bean>
	<bean id="honggil" class="com.test05.Developer" p:emp-ref="hong" p:dept="개발팀"></bean>
</beans>

